{
  "name": "uaproger/aprog",
  "description": "Бібліотека для роботи з властивостями",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Src\\": "src/"
    }
  },
  "bin": [
    "aprog"
  ],
  "authors": [
    {
      "name": "Oleksandr Zadorozhnii",
      "email": "developer@alexproger.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "symfony/console": "^6.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Src\\AprogServiceProvider"
      ]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"if (PHP_OS_FAMILY !== 'Windows') { chmod(__DIR__ . '/aprog', 0755); }\""
    ],
    "post-update-cmd": [
      "@php -r \"if (PHP_OS_FAMILY !== 'Windows') { chmod(__DIR__ . '/aprog', 0755); }\""
    ]
  }
}